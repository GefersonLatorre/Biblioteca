@model List<Biblioteca.Models.ViewModels.ListaAutorVM>
@{
    ViewBag.Title = "Lista Autores";
}

<h2 style="margin-top: 100px; color: blue; font-family: Castellar;">@ViewBag.Title</h2>

<div class="row" style="text-align:right;margin-bottom:10px;">
    <a href="~/Autor/Nuevo" class="btn btn-success">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table style="background-color:gray" class="table table-striped">
            <tr style="color:darkorange;font-family:'Lucida Sans'">
                <th>Nombre</th>
                <th>Fecha Nacimiento</th>
                <th>Lugar Nacimiento</th>
                <th>Correo</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr style="color:darkgreen">
                    <td>@item.Nombre</td>
                    <td>@(String.Format("{0:dd/MM/yyyy}", item.Fecha_Nacimiento))</td>
                    <td>@item.Lugar_Nacimiento</td>
                    <td>@item.Correo</td>
                    <td>
                        <a class="btn btn-info" href="~/Autor/Editar/@item.Id">Editar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

